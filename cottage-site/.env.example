# Application
APP_NAME="Cottage-Ware.net"
ENV=development
DEBUG=true

# Security
SECRET_KEY="change-me-please"
ACCESS_TOKEN_EXPIRE_MINUTES=360
# JWT cookie
JWT_COOKIE_NAME="access_token"
# Set true when serving over HTTPS in production
JWT_COOKIE_SECURE=false

# Database (SQLAlchemy async URL)
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/cottage_db"

# Redis
REDIS_URL="redis://localhost:6379/0"

# Search (optional)
MEILI_URL="http://localhost:7700"
MEILI_MASTER_KEY="changeme"

# OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
# e.g. http://localhost:8000/auth/google/callback
GOOGLE_REDIRECT_URL=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
# e.g. http://localhost:8000/auth/github/callback
GITHUB_REDIRECT_URL=""

# Cloudflare Turnstile
TURNSTILE_SITE_KEY=""
TURNSTILE_SECRET_KEY=""

# CORS / Hosts
ALLOWED_HOSTS=["*"]
